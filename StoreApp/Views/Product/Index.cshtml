@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products-number="3"></div>
    </div>

    <div class="col-md-9">
        <div class="row my-4">
            @foreach (var prd in Model.Products)
            {
                <partial name="_ProductCard" model="@prd" />
            }
        </div>

        <!-- Pagination bölümü -->
        <div class="pagination-container">
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enable="true"
                 page-class="btn" page-class-normal="btn-outline-warning" page-class-selected="btn-primary"
                 class="pagination justify-content-start">
            </div>
        </div>

    </div>
</div>

@section Footer {
    <div>
        Only for Index Footer
    </div>
}
