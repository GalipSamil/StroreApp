<div class="my-3">
    <h5 class="lead text-muted">
        <i class="fa fa-sliders-h filter-icon text-secondary me-2"></i>
        Filters
    </h5>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />

        <div class="form-group mb-3">
            <input type="text" class="form-control" name="SearchTerm" placeholder="Search..." />
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" name="MinPrice" placeholder="Min. Price" />
        </div>
        
        <div class="form-group mb-3">
            <input type="text" class="form-control" name="MaxPrice" placeholder="Max. Price" />
        </div>


        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary btn-sm w-100">Apply Filters</button>
        </div>
    </form>
</div>
